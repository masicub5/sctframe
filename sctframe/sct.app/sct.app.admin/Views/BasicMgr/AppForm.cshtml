@{
    ViewBag.Title = "AppForm";
    Layout = "~/Views/Shared/_FormLayoutPage.cshtml";
}
@model sct.dto.uc.AppInfo
@using (Html.BeginForm("SaveApp", "BasicMgr", FormMethod.Post, new { @class = "form-horizontal" }))
{  
    <div class="portlet box  blue">
        <div class="portlet-title">
            <div class="caption">配置应用信息</div>
        </div>
        <div class="portlet-body form">
            <div class="control-group">
                <label class="control-label">应用编码 @Html.Hidden("Id", Model.Id)</label>
                <div class="controls">
                    @Html.TextBoxFor(x => x.AppCode, new { placeholder = "应用编码", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">应用名称</label>
                <div class="controls">@Html.TextBoxFor(x => x.AppName, new { placeholder = "应用名称", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">公钥</label>
                <div class="controls">@Html.TextBoxFor(x => x.PublicKey, new { placeholder = "公钥", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">密钥</label>
                <div class="controls">@Html.TextBoxFor(x => x.PrivateKey, new { placeholder = "密钥", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">排序</label>
                <div class="controls">@Html.TextBoxFor(x => x.SYS_OrderSeq, new { placeholder = "0", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">是否启用</label>
                <div class="controls">
                    <label class="radio">@Html.RadioButton("SYS_IsValid", 1, Model.SYS_IsValid == 1) 启用 </label>
                    <label class="radio">@Html.RadioButton("SYS_IsValid", 0, Model.SYS_IsValid == 0)  失效  </label>
                </div>
            </div>
        </div>
        <div class="portlet-title">
            <div class="caption">
                <input type="submit" id="btnSave" value="提交" class="btn blue" /><input type="button" value="取消" onclick="javascript: window.close();" class="btn blue" />
            </div>
        </div>
    </div>
}


