@{
    ViewBag.Title = "ClientTypeForm";
    Layout = "~/Views/Shared/_FormLayoutPage.cshtml";
}
@model sct.dto.uc.ClientTypeInfo
@using (Html.BeginForm("SaveClientType", "BasicMgr", FormMethod.Post, new { @class = "form-horizontal" }))
{ 
    <div class="portlet box  blue">
        <div class="portlet-title">
            <div class="caption">客户分类设置</div>
        </div>
        <div class="portlet-body form">
            <div class="control-group">
                <label class="control-label">
                    编码 @Html.Hidden("Id", Model.Id)</label>
                <div class="controls">@Html.TextBoxFor(x => x.ClientTypeCode, new { placeholder = "编码", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">客户分类名称</label>
                <div class="controls">@Html.TextBoxFor(x => x.ClientTypeName, new { placeholder = "客户分类名称", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    上级客户分类</label>
                <div class="controls">@Html.DropDownListFor(x => x.ParentId, sct.cm.util.HtmlSetter.ListToTreeList(ViewBag.DicClientType as List<sct.cm.data.ChooseDictionary>, 2, true, "--根目录--"))
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">节点</label>
                <div class="controls">@Html.TextBoxFor(x => x.TreeNode, new { placeholder = "节点", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">排序</label>
                <div class="controls">@Html.TextBoxFor(x => x.SYS_OrderSeq, new { placeholder = "0", @class = "m-wrap medium" })
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">是否启用</label>
                <div class="controls">
                    <label class="radio">@Html.RadioButton("SYS_IsValid", 1, Model.SYS_IsValid == 1) 启用 </label>
                    <label class="radio">@Html.RadioButton("SYS_IsValid", 0, Model.SYS_IsValid == 0)  失效  </label>
                </div>
            </div>
        </div>
        <div class="portlet-title">
            <div class="caption">
                <input type="submit" id="btnSave" value="提交" class="btn blue" /><input type="button" value="取消" onclick="javascript: window.close();" class="btn blue" />
            </div>
        </div>
    </div>
}
